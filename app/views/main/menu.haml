  - %w[beginner intermediate].each do |level|
    %tr
      %th.title
        - if level == 'intermediate'
          = image_tag 'under_construction.png', style: 'float: left',
            title: 'Under construction'
        %h2= level.humanize
      %td.purple
      %td.yellow
      %td.blue
      %td.red
      %td.green
    - @topics.select { |topic| topic.level == level }.each do |topic|
      %tr
        %th.title!= topic.title_html
        - %w[purple yellow blue red green].each do |color|
          %td{class: color}
            - if @topic_id_color_exists[[topic.id, color]]
              = done_indicator topic.num, color.upcase[0]
